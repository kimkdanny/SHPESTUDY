<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#6E8B9F" />
            <gradient android:angle="-90" android:startColor="#2A7DD0" android:endColor="#0C3965"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#0C3965" />
            <solid android:color="#2A7DD0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#6E8B9F" />
            <gradient android:angle="-90" android:startColor="#2A7DD0" android:endColor="#0C3965" />
        </shape>
    </item>
</selector>