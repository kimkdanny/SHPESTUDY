<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CSE 100"
            android:id="@+id/eventName"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apr 21"
            android:layout_below="@+id/eventName"
            android:layout_alignLeft="@+id/eventTime"
            android:layout_alignStart="@+id/eventTime" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:00 pm - 6:00 pm"
            android:layout_below="@+id/eventDate"
            android:layout_alignLeft="@+id/eventLocation"
            android:layout_alignStart="@+id/eventLocation" />

        <TextView
        android:id="@+id/eventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHPE ROOM"
        android:layout_below="@+id/eventTime"
        android:layout_alignLeft="@+id/eventName"
        android:layout_alignStart="@+id/eventName" />


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHPE ROOM"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"

            android:layout_below="@+id/eventLocation"
            android:layout_alignLeft="@+id/eventName"
            android:layout_alignStart="@+id/eventName" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




